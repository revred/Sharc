@* Themed divider between benchmark sections *@

<div class="section-header" style="border-color: @Color">
    <span class="section-header-icon">@Icon</span>
    <span class="section-header-label" style="color: @Color">@Label</span>
</div>

@code {
    [Parameter] public required string Icon { get; set; }
    [Parameter] public required string Label { get; set; }
    [Parameter] public string Color { get; set; } = "rgba(255,255,255,0.2)";
}
